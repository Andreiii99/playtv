header.header
  .container
    .header__content
      svg.header__logo
        use(xlink:href="#logo")
      .header__link
        span #{iptv_url}
        svg.header__link-icon
          use(xlink:href="#icon-link")

    nav.header__menu
      h2.hide Menu
      ul.header__menu-list
        li
          a.header__menu-item.active(href="#", data-filter="*") Todos
        li
          a.header__menu-item(href="#", data-filter=".documentarios") Documentarios
        li
          a.header__menu-item(href="#", data-filter=".esportes") Esportes
        li
          a.header__menu-item(href="#", data-filter=".filmesseries") Filmes & Series
        li
          a.header__menu-item(href="#", data-filter=".infantil") Infantil
        li
          a.header__menu-item(href="#", data-filter=".jornalismo") Jornalismo
        li
          a.header__menu-item(href="#", data-filter=".musicas") Musicas
